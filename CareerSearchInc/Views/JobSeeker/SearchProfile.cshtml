
@{
    ViewData["Title"] = "SearchProfile";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="container">
    <div class="row">
        <div class="col-md-4 col-lg-3"></div>
        <div class="col-md-4 col-lg-6 " id="form">
            <h1 class="text-center text-secondary font-italic">Search Profiles</h1>
            <form action="">
                <div class="form-row">

                    <div class="form-group col-md-4">
                        <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Country>()"></select>
                    </div>
                    <div class="form-group col-md-4">
                        <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<HighestQualification>()"></select>
                    </div>
                    <div class="form-group col-md-4">
                        <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Grade>()"></select>
                    </div>
                    <div class="form-group col-md-4">
                        <input type="number" class="form-control" placeholder="Graduation year" />
                    </div>
                    <div class="form-group col-md-4">
                        <input type="number" class="form-control" placeholder="Years of experience" />
                    </div>
                    <div class="form-group col-md-4">
                        <input type="text" class="form-control" placeholder="Functional areas" />
                    </div>
                </div>

                <div class="form-group">
                    <input type="button" class="form-control btn btn-primary btn-block" id="newBookBtn" value="Search" />
                </div>
            </form>
        </div>
        <div class="col-md-4 col-lg-3"></div>
    </div>


</section>
