
@{
    ViewData["Title"] = "SignUp";
    Layout = "~/Views/Shared/_Layout.cshtml";
}
@model Country

<ul class="nav nav-tabs" id="myTab" role="tablist">
    <li class="nav-item" role="presentation">
        <a class="nav-link active" id="home-tab" data-toggle="tab" href="#home" role="tab" aria-controls="home" aria-selected="true">Sign up as job seeker</a>
    </li>
    <li class="nav-item" role="presentation">
        <a class="nav-link" id="profile-tab" data-toggle="tab" href="#profile" role="tab" aria-controls="profile" aria-selected="false">Sign up as recruiter</a>
    </li>
</ul>

@*Job seeker form*@
<div class="tab-content mt-5" id="myTabContent">
    <div class="tab-pane fade show active" id="home" role="tabpanel" aria-labelledby="home-tab">
        <section class="container form">
            <div class="row">
                <div class="col-md-4 col-lg-3"></div>
                <div class="col-md-4 col-lg-6 " id="form">
                    <h1 class="text-center text-secondary font-italic">Sign Up as job seeker</h1>
                    <form action="" name="MyForm">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input name="FirstName" id="FirstName" type="text" class="form-control " title="title" placeholder="First Name" autofocus />
                                <h6 id="displayFN"></h6>
                            </div>

                            <div class="form-group col-md-6">
                                <input name="LastName" id="LastName" type="text" class="form-control" placeholder="Last Name" />
                                <h6 id="displayLN"></h6>
                            </div>

                            <div class="form-group col-md-6">
                                <input type="date" class="form-control" placeholder="Date of birth" />
                            </div>
                            <div class="form-group col-md-6">
                                <select class="form-control">
                                    <option value="">Male</option>
                                    <option value="">Female</option>
                                </select>
                            </div>
                            <div class="form-group col-md-6">
                                <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Country>()"></select>
                            </div>

                            <div class="form-group col-md-6">
                                <input id="Phone" type="text" class="form-control" placeholder="Phone" />
                                <h6 id="displayP"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="Email" type="email" class="form-control" placeholder="Email " />
                                <h6 id="displayE"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="Address" type="text" class="form-control" placeholder="Home Address" />
                                <h6 id="displayA"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<HighestQualification>()"></select>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="Course" type="text" class="form-control" placeholder="Course Of Study " />
                                <h6 id="displayC"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Grade>()"></select>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="GradYr" type="number" class="form-control" placeholder="Graduation year" />
                                <h6 id="displayG"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="ExpYr" type="number" class="form-control" placeholder="Years of experience" />
                                <h6 id="displayExYr"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="Functional" type="text" class="form-control" placeholder="Functional areas" />
                                <h6 id="displayF"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="Password" name="Password" type="text" class="form-control" placeholder="Password" />
                                <h6 id="pass"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="ConPass" name="ConfirmPassword" type="text" class="form-control" placeholder="Confirm password" />
                                <h6 id="Cpass"></h6>
                            </div>
                            <div class="form-group col-md-12">
                                <textarea class="form-control" placeholder="Cover letter" rows="3"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="button" class="form-control btn btn-primary btn-block" id="newBookBtn" value="Submit" />
                        </div>
                        <div class="form-group">
                            <input type="button" class="form-control btn btn-block" id="cancelBtn" value="Cancel" />
                        </div>
                    </form>
                </div>
                <div class="col-md-4 col-lg-3"></div>
            </div>
        </section>
    </div>

    @*Recruiter form*@
    <div class="tab-pane fade mt-5" id="profile" role="tabpanel" aria-labelledby="profile-tab">
        <section class="container form">
            <div class="row">
                <div class="col-md-4 col-lg-3"></div>
                <div class="col-md-4 col-lg-6 " id="form">
                    <h1 class="text-center text-secondary font-italic">Sign Up as recruiter</h1>
                    <form action="" name="MyForm">
                        <div class="form-row">
                            <div class="form-group col-md-6">
                                <input id="Name" type="text" class="form-control " title="title" placeholder="Company name" autofocus />
                                <h6 id="displayName"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Country>()"></select>
                            </div>

                            <div class="form-group col-md-6">
                                <input id="PhoneNum" type="text" class="form-control" placeholder="Phone" />
                                <h6 id="displayPN"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="ComEmail" type="email" class="form-control" placeholder="Email " />
                                <h6 id="displayCE"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="ComAddress" type="text" class="form-control" placeholder="Address" />
                                <h6 id="displayCA"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="ComFunctional" type="text" class="form-control" placeholder="Functional areas" />
                                <h6 id="displayCF"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="ComPassword" name="Password" type="text" class="form-control" placeholder="Password" />
                                <h6 id="passC"></h6>
                            </div>
                            <div class="form-group col-md-6">
                                <input id="ConComPass" name="ConfirmPassword" type="text" class="form-control" placeholder="Confirm password" />
                                <h6 id="CpassC"></h6>
                            </div>
                            <div class="form-group col-md-12">
                                <textarea class="form-control" placeholder="About your company" rows="3"></textarea>
                            </div>
                        </div>

                        <div class="form-group">
                            <input type="button" class="form-control btn btn-primary btn-block" id="newBookBtn" value="Submit" />
                        </div>
                        <div class="form-group">
                            <input type="button" class="form-control btn btn-block" id="cancelBtn" value="Cancel" />
                        </div>
                    </form>
                </div>
                <div class="col-md-4 col-lg-3"></div>
            </div>
        </section>
    </div>
</div>
