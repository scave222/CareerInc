
@{
    ViewData["Title"] = "Apply";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="container">
    <div class="row">
        <div class="col-md-4 col-lg-3"></div>
        <div class="col-md-4 col-lg-6 " id="form">
            <h1 class="text-center text-secondary font-italic">Apply for job</h1>
            <form action="">
                <div class="form-row">
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" title="title" placeholder="First Name" autofocus />
                    </div>

                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" placeholder="Last Name" />
                    </div>

                    <div class="form-group col-md-6">
                        <input type="date" class="form-control" placeholder="Date of birth" />
                    </div>
                    <div class="form-group col-md-6">
                        <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Country>()"></select>
                    </div>

                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" placeholder="Phone" />
                    </div>
                    <div class="form-group col-md-6">
                        <input type="email" class="form-control" placeholder="Email " />
                    </div>
                    <div class="form-group col-md-6">
                        <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<HighestQualification>()"></select>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="text" class="form-control" placeholder="Course Of Study " />
                    </div>
                    <div class="form-group col-md-6">
                        <select class="custom-select mr-sm-2" asp-items="Html.GetEnumSelectList<Grade>()"></select>
                    </div>
                    <div class="form-group col-md-6">
                        <input type="number" class="form-control" placeholder="Years of experience" />
                    </div>
                    <div class="form-group col-md-12">
                        <input type="text" class="form-control" placeholder="Position applying for" />
                    </div>
                    <div class="form-group col-md-12">
                        <textarea class="form-control" placeholder="Cover letter" rows="3"></textarea>
                    </div>
                </div>

                <div class="form-group">
                    <input type="button" class="form-control btn btn-primary btn-block" id="newBookBtn" value="Submit" />
                </div>
            </form>
        </div>
        <div class="col-md-4 col-lg-3"></div>
    </div>
</section>